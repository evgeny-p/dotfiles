general {
        colors = true
        interval = 5
}

order += "ethernet _first_"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse:0"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

battery 0 {
		format = "%status %percentage %remaining"
		format_down = "No battery"
		status_chr = "⚇ CHR"
		status_bat = "⚡ BAT"
		status_full = "☻ FULL"
}
